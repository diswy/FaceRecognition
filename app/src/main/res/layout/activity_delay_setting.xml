<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.core.DelaySettingActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="16dp"
			android:paddingTop="16dp"
			android:paddingEnd="16dp"
			android:paddingBottom="16dp"
			android:text="Tips:"
			android:textColor="#222"
			android:textStyle="bold" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:text="时间单位为毫秒，如果要设置1s，请在下方填写1000"
			android:textColor="#222" />


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:text="闸机延长时间，默认300毫秒:"
			android:textColor="@color/c333" />

		<EditText
			android:id="@+id/et_delay"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@null"
			android:gravity="center_vertical"
			android:hint="请设置闸机延长时间，默认为0.3s"
			android:inputType="number"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:textSize="16sp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:text="人脸识别延长时间(拍照间隔)，默认5000毫秒:"
			android:textColor="@color/c333" />

		<EditText
			android:id="@+id/et_delay_face"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@null"
			android:gravity="center_vertical"
			android:hint="请设置人脸识别延长时间，默认为5s"
			android:inputType="number"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:textSize="16sp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:text="延迟注册人脸时间，默认3000毫秒:"
			android:textColor="@color/c333" />

		<EditText
			android:id="@+id/et_delay_register"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@null"
			android:gravity="center_vertical"
			android:hint="请设置注册人脸时延迟注册的时间，默认为3s"
			android:inputType="number"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:textSize="16sp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:text="开闸模式："
			android:textColor="@color/c333" />

		<RadioGroup
			android:id="@+id/open_type_rg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingStart="16dp"
			android:paddingEnd="16dp">

			<RadioButton
				android:checked="true"
				android:id="@+id/open_type_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="模式一" />

			<RadioButton
				android:id="@+id/open_type_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:text="模式二" />

		</RadioGroup>

		<TextView
			android:id="@+id/btn_commit"
			android:layout_width="280px"
			android:layout_height="50px"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="50dp"
			android:background="@drawable/btn_bg"
			android:gravity="center"
			android:text="确认设置"
			android:textColor="@color/white" />

	</LinearLayout>


</ScrollView>